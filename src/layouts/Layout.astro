---
import Footer from '@/components/Footer.astro';
interface Props {
	title?: string;
	description: string;
}

const { title: titlePrefix, description } = Astro.props;

const titleSuffix = "Andr√© Lima";
const title = titlePrefix
	? `${titlePrefix} | ${titleSuffix}`
	: titleSuffix;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="min-h-screen flex flex-col bg-gradient-to-br from-slate-950 to-slate-800 text-slate-100">
		<div class="flex-grow grid grid-cols-1 grid-rows-1">
			<slot />
		</div>
		<div>
			<Footer />
		</div>
	</body>
</html>
